{% extends 'base.html.twig' %}

{% block header %}
    <h1>{% trans %}layout.login{% endtrans %}</h1>
{% endblock %}

{% trans_default_domain 'FOSUserBundle' %}


{% block content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}


    <div class="panel">
        <div class="panel-body">
                <form action="{{ path("fos_user_security_check") }}" method="post">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    <div class="form-group row">
                        <label class="control-label col-sm-3" for="username">{{ 'security.login.username'|trans }}</label>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                    </div>
                    <div class="form-group row">
                        <label class="control-label col-sm-3" for="password">{{ 'security.login.password'|trans }}</label>
                        <input type="password" id="password" name="_password" required="required" />
                    </div>
                    <div class="form-group row">
                        <span class="col-sm-3"> &nbsp; </span>
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> &nbsp; 
                        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                    </div>
                    <div class="form-group row">
                        <span class="col-sm-3"> &nbsp; </span>
                        <input type="submit" class="btn btn-primary" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                    </div>

                </form>
        </div>
    </div>
    <script>
        jQuery(function($){
            $('#username').focus();
        });
    </script>    
    
{% endblock content %}