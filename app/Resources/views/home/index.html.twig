{% extends 'base.html.twig' %}
{% set navbar_selected = 'home' %}
    {% block sidebar %}
        {% if competition.logoFilename is not empty %}
            <div class="logo">
                <img class="img-responsive" src="{{ vich_uploader_asset(competition, 'logoFile') }}" alt="{{ competition.name }}" />
            </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">Competition Status</div>
            <div class="list-group">
                <li class="list-group-item {{ competition.isRegistrationOpen ? 'status-open' : 'status-closed'}}">
                    Account Registration
                    {% if competition.isRegistrationOpen == false and competition.registrationClose is not empty %}
                        <br><span>Close{{ competition.isRegistrationOpen ? 's' : 'd' }} {{competition.registrationClose|date('Y-m-d H:i')}}</span>
                    {% elseif competition.isRegistrationOpen == false and competition.registrationClose is not empty %}
                        <br><span>Close{{ competition.isRegistrationOpen ? 's' : 'd' }} {{competition.registrationClose|date('Y-m-d H:i')}}</span>
                    {% endif %}
                </li>
                <li class="list-group-item">Add Entries {{ icon('remove') }}</li>
                <li class="list-group-item">Entry Drop Off {{ icon('ok') }}</li>
                <li class="list-group-item">Entry Shipping {{ icon('ok') }}</li>
                <li class="list-group-item">Lock Down {{ icon('ok') }}</li>
            </div>
        </div>
        {% block actions %}
        {% endblock actions %}
    {% endblock sidebar %}
{% block content %}
    <div id="wrapper">
        <div id="container">
            <div id="welcome">
                <h1>{{ competition.name }}</h1>
                <p>{{ competition.description | nl2br }}</p>
            </div>
        </div>
    </div>
{% endblock content%}
