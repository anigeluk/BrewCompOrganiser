<div id="help-modal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">
{#                    <img width="120" alt="Cultivate" src="/images/logo-{{ get_logo() }}.png" class="logo">#}
                </h4>
            </div>
            <div class="modal-body">
                {% if help|default() is empty %}
                    <p>Help is not currently available for this page.</p>
                {% else %}
                    {{ help|nl2br }}
                {% endif %}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="cancel" data-dismiss="modal" >Close</button>
            </div>
        </div>
    </div>
</div>
<script>
    jQuery(function($){
        $('#helpLink').on('click', function (e) {
            e.preventDefault();
            $('#help-modal').modal('show');
        });
    });
</script>