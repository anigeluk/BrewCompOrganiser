{% extends 'admin/index.html.twig' %}
{% set sidebar_selected = 'locations' %}
{% block header %}
    <h1>{% trans %}Add Location{% endtrans %}</h1>
    <div class="actions">
        <a class="btn btn-danger" href="{{ path('admin_location_index') }}">{% trans %}Cancel{% endtrans %}</a>
    </div>
{% endblock header %}
{% block content %}
    {{ form_start(form, { 'style': 'horizontal', 'label_col': 3, 'widget_col': 9 }) }}
        {{ form_widget(form) }}
        <input type="submit" value="Create" />
    {{ form_end(form) }}
{% endblock %}
